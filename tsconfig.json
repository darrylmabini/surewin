{
    "compilerOptions": {
        "lib": ["es2015", "dom"],
        "types": ["node"],
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "Sass*": ["assets/sass/*"],
            "View*": ["assets/js/view/*"],
            "Model*": ["assets/js/model/*"],
            "Config*": ["assets/js/config/*"],
            "System*": ["assets/js/system/*"],
            "Libraries*": ["assets/js/libraries/*"],
            "Controller*": ["assets/js/controller/*"]
        }
    },
    "include": [
        "assets/**/*.ts",
        "assets/**/*.json"
    ],
    "exclude": [
        "node_modules"
    ]
}
