{
    "compilerOptions": {
        "lib": ["es2015", "dom"],
        // "types": ["node"],
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "Sass/*": ["src/site/assets/sass/*"],
            "View/*": ["src/site/view/*"],
            "Model/*": ["src/site/model/*"],
            "Config/*": ["src/site/config/*"],
            "System/*": ["src/site/system/*"],
            "Libraries/*": ["src/site/libraries/*"],
            "Controller/*": ["src/site/controller/*"]
        }
    },
    "include": [
        "src/site/**/*.ts",
        "src/site/**/*.json"
    ],
    "exclude": [
        "node_modules"
    ]
}
