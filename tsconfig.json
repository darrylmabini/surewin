{
    "compilerOptions": {
        "lib": ["es2015", "dom"],
        "types": ["node"],
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "."
    },
    "include": [
        "assets/**/*.ts",
        "assets/**/*.json"
    ],
    "exclude": [
        "node_modules"
    ]
}
